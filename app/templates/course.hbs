<div class="paddingContainer">

	{{#link-to 'index' class="linkToParent"}}<i class="fa fa-chevron-left"></i><span>Home</span>{{/link-to}}

	<h1>{{title}} Cursus</h1>

	<div class="courseGoal">
		<p><span class="targetIcon"></span><span>Doel van deze cursus: {{goal}}</span></p>
		<p><span class="userIcon"></span><span>De cursus is gericht op: {{targetGroup}}</span></p>
		<p><span class="prerequisitesIcon"></span><span>Benodigde voorkennis: {{prerequisites}}</span></p>
	</div>

	<div class="row">
		<h2>De lessen</h2>
		{{#each lessons}}
		<div class="lessonColumn">
			{{#view BecomeTjunaFish.CourseProgressView}}
				<h3>{{title}}</h3>
				<div class="progressCircle">
					{{input type="text" value=progress class="dial"}}
				</div>
				{{#link-to "lesson" this class="default-btn"}}Begin deze les{{/link-to}}
			{{/view}}
		</div>
		{{/each}}
	</div>
</div>